<% layout('layout') -%>
<h2>Your Profile</h2>
<p><strong><%= user.name %></strong> — <%= user.email %> (<%= user.role %>)</p>
<h3>Borrowed Books</h3>
<ul>
  <% books.forEach(b => { %>
    <li><%= b.title %> — due <%= b.dueDate ? new Date(b.dueDate).toLocaleDateString() : '-' %></li>
  <% }) %>
</ul>
